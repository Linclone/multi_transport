<?xml version="1.0" encoding="utf-8"?>
<!-- This Xacro file was converted from a URDF file created by SolidWorks to URDF Exporter -->
<robot name="joint" xmlns:xacro="http://www.ros.org/wiki/xacro">


    <xacro:include filename="$(find husky_description)/urdf/husky.urdf.xacro" />

    <xacro:include filename="$(find rigid)/urdf/rigid.urdf.xacro" />

    <!-- Define a reusable macro for joints -->
    <xacro:macro name="cylinder_joint" params="name parent child x_position">
        <joint name="${name}" type="continuous">
            <parent link="${parent}"/>
            <child link="${child}"/>
            <origin xyz="${x_position} 0 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>

    <!-- Use the macro to create joints -->
    <xacro:cylinder_joint name="rigid_to_husky1_cylinder_joint" parent="rigid/base_link" child="husky_1/cylinder_link" x_position="-1.414"/>
    <xacro:cylinder_joint name="rigid_to_husky2_cylinder_joint" parent="rigid/base_link" child="husky_2/cylinder_link" x_position="1.414"/>

</robot>
